extends ../../layout-adm
	
block content
	link(rel='stylesheet', href='/stylesheets/glojas/produtos.css')

	form(align='center' method='Post')
			h1(class='titulo') Adicionar Produto

			label(for="Codigo" class='labelItem') CodProduto
			br
			input(type='number' name='CodProduto' class='inputItem' required placeholder="00001")
			br

			label(for="Imagem" class='labelItem') Url da Imagem
			br
			input(type='url' name='Imagem' class='inputItem' required placeholder="http://a-static.mlcdn.com.br/****" size='50')
			br
			
			label(for="Produto" class='labelItem') Produto
			br
			input(type='text' name='Produto' class='inputItem' required placeholder="Nome do Produto" size='50')
			br
			label(for="Valor" class='labelItem') Valor
			br
			input(type='number' name='ValorProduto' class='inputItem' required placeholder="2990.00" size='10' step="0.01")
			br

			label(for="Produto" class='labelItem') Descrição do Produto
			br
			textarea(type='text' rows="5" cols="60" maxlength="500" name='Descricao' class='radius' required placeholder="Descrição detalhada do produto" class='inputItem')
			br

			label(for="Produto" class='labelItem') Como será encontrado?
			br
			textarea(type='text' rows="3" cols="60" maxlength="500" name='Search' class='radius' required placeholder="console, videogame, ps4, playstation" class='inputItem')
			br
			
			br
			button(type='submit' value="save" style='margin-bottom:40px' class="btn btn-primary") Adicionar Item