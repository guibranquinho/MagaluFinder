extends ../../layout-adm
	
block content
	link(rel='stylesheet', href='/stylesheets/glojas/lojas.css')
	if messages.created
		div(style='text-align:center;position:fixed;top:160px;width:100%' class="alert alert-success")
			each msg in messages.created
				b= msg

	if messages.deleted
		div(style='text-align:center;position:fixed;top:160px;width:100%' class="alert alert-success")
			each msg in messages.deleted
				b= msg

	if messages.info
		div(style='text-align:center;position:fixed;top:160px;width:100%' class="alert alert-danger")
			each msg in messages.info
				b= msg	

	h2(class='titulo') Lojas
	div(style='text-align:right; padding: 0px 5% 0px 0px;')
		button(onClick="window.location.href='/gLojas/lojas/adicionar'" class="btn btn-primary")   
			span.glyphicon.glyphicon-plus-sign(style='color:white;position:static' )|  Adicionar 
	br


	if lista.length > 0
		-var i = 1
		
		

		div(class='divLojas')
			table(align='center'  style='background-color:white;font-size:90%' class="table table-striped table-bordered" class='tabela')
				tread
					tr
						th(class='thItem') FILIAL
						th(class='thItem') DESCRICAO
						th(class='thItem') ENDERECO
						th(class='thItem') BAIRRO
						th(class='thItem') CIDADE
						th(class='thItem') CEP
						th 
						th 

					tbody
						each valor in lista
							tr(style='margin-top:10px')
								td(class='tdItem' style="width:10%") #{valor.CodFilial}
								td(class='tdItem' style="width:20%") #{valor.Descricao}
								td(class='tdItem' style="width:20%") #{valor.Endereco}
								td(class='tdItem' style="width:15%") #{valor.Bairro}
								td(class='tdItem' style="width:10%") #{valor.Cidade}
								td(class='tdItem' style="width:20%") #{valor.Cep}

										
								td(class='tdItem' style="width:2%" ) 
									a(href='/gLojas/lojas/alterar/#{valor.id}')
										span.glyphicon.glyphicon-pencil(style='color:Gray;position:static')
								td(class='tdItem' style="width:2%")
										a(href='/gLojas/dellloja/#{valor.id}' )
											span.glyphicon.glyphicon-trash(style='color:Gray;position:static')
	else
		h6(style='text-align:center') Nenhuma loja encontrada
