extends ../layout-adm
	
block content
	link(rel='stylesheet', href='/stylesheets/style-login.css')
	h2(class="form-signin-heading") Login

	if messages.falha
		br
		div(class="alert alert-danger" style='position:absolute; width:100%;margin-left:0px;top:160px;text-align:center')
			each msg in messages.falha
				b= msg
				br
	
	div(class='divMagalu')

	div(class="container")

		form(method="POST",class="form-signin")
		
			
			input(type="text", name="usuario", class="form-control", placeholder="Insira seu Usu√°rio" required, autofocus)
			input(type="password", name="password", class="form-control", placeholder="Insira sua Senha", required)


			button(type='submit' class="btn btn-primary btn-block" value="btnLogin") Entrar

			if messages.erro
				br
				div(class="alert alert-danger")
					each msg in messages.erro
						b= msg
						br

			